<!doctype html>
<html>
<head>
  <title>ClanChat</title>
  <script src="jquery-1.11.0.min.js"></script>
  <script src="application.js"></script>
  <link href="normalize.css" rel="stylesheet" />
  <link href="styles.css" rel="stylesheet" />
</head>
<body class="nojs">
  <h1>ClanChat</h1>
  <p>Welcome to ClanChat!</p>

  <form action="/chat" method="POST" id="chat_form">
    <input type="hidden" name="since" id="since" value="<%= Time.now().to_i %>" />
    <label for="username">Username</label><input id="username" type="text" name="username" value="<%= @username %>" />
    <div id="message_container">
    <div id="wysiwyg_cp" style="padding:8px; width:400px;">
      <input type="button" id="makeBold" value="B"> 
      <input type="button" id="makeUnderline" value="U">
      <input type="button" id="makeItalic" value="I">
      <input type="button" id="changeFontSize" value="Text Size">
      <input type="button" id="changeColor" value="Text Color">
      <input type="button" id="insertUnorderedList" value="UL">
      <input type="button" id="insertOrderedList" value="OL">
      <input type="button" id="createLink" value="Link">
      <input type="button" id="destroyLink" value="UnLink">
      <input type="button" id="insertImage" value="Image">
    </div>
      <textarea style="display:none;" type="text" name="message" id="message" placeholder="Type your message here..." /></textarea>
      <iframe name="richTextField" id="richTextField" style="border:#000000 1px solid; width:400px; height:200px;"></iframe>
      <button name="submit" id="submit" onClick="submit_form();">Send</button>
    </div>
  </form>

  <ul class="chat" id='chatbox'>
    <% @lines.reverse.each do |line| %>
    <li>
      <span title="<%= pretty_timestamp_time(line[:timestamp]) %>">
        <span class="username">&lt;<%= line[:username] %>&gt;</span>
        <span class="message"><%= line[:message] %></span>
      </span>
    </li>
    <% end %>
  </ul>

</body>
</html>
